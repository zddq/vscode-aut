{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
