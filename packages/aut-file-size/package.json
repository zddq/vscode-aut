{
  "private": true,
  "version": "1.0.6",
  "description": "底部状态栏显示当前文件大小信息",
  "displayName": "Aut File Size",
  "publisher": "minisss",
  "icon": "./assets/logo.jpg",
  "name": "minisss-file-size",
  "keywords": [
    "minisss-file-size",
    "file-size",
    "minisss"
  ],
  "main": "dist/index.js",
  "activationEvents": [
    "*"
  ],
  "categories": [
    "Other"
  ],
  "contributes": {
    "configuration": [
      {
        "title": "minisss-file-size",
        "properties": {
          "minisss-file-size.position": {
            "type": "string",
            "default": "left",
            "description": "set left or right  设置显示位置. E.g \"minisss-file-size.position\":\"left\""
          },
          "minisss-file-size.priority": {
            "type": "integer",
            "default": 0,
            "description": "Higher values mean the item should be shown more to the left. 设置优先级，值越大越往左"
          },
          "minisss-file-size.color": {
            "type": "string",
            "default": "#f2481b",
            "description": "text color, 文案颜色"
          },
          "minisss-file-size.tooltip": {
            "type": "string",
            "default": "current text editor file size, 当前活动窗口文件大小"
          }
        }
      }
    ]
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "build": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js -- production",
    "publish": "vsce publish --no-dependencies"
  },
  "dependencies": {
    "@vscode/vsce": "^3.2.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.24.2",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.78.0",
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zddq/vscode-aut.git",
    "directory": "packages/ant-icons"
  }
}
